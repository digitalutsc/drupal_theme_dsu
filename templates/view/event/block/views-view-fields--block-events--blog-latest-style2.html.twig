{% set dates = fields.field_start_date.content | split('-') %}
{% set now = "now"|date('U') %}
{% set event_end = fields.field_end_date.content |date('U') %}

{% if (now - event_end) < 0 %}
    <div>
        <div class="recent-posts">
            <article class="post">
                <div class="date">
                    {% if fields.field_start_date.content %}
                        <span class="day">{{ fields.field_start_date.content | date('d') }}</span>
                    {% endif %}
                    {% if fields.field_start_date.content %}
                        <span class="month">{{ fields.field_start_date.content | date('M') }}</span>
                    {% endif %}
                </div>
                {% if fields.title %}
                    <h4 class="heading-primary"><a href="{{ fields.path.content }}">{{ fields.title.content }}</a></h4>
                {% endif %}
                {% if fields.body %}
                    {{ fields.body.content }} <!--<a href="{{ fields.path.content }}" class="read-more">read more <i class="fa fa-angle-right"></i></a>-->
                {% endif %}
            </article>
        </div>
    </div>

{% endif %}

